<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.papb.tapapb.DoaAnakActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/hijau"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doa Harian Anak"
            android:textColor="#ffffff"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="140dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/btn_back"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sebelum_makan">

                    <ImageView
                        android:id="@+id/img_sebelum_makan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sebelum_makan" />

                    <TextView
                        android:id="@+id/text_sebelum_makan"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Sebelum Makan"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sesudah_makan">

                    <ImageView
                        android:id="@+id/img_setelah_makan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sesudah_makan" />

                    <TextView
                        android:id="@+id/text_setelah_makan"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Setelah Makan"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sebelum_wudhu">

                    <ImageView
                        android:id="@+id/img_sebelum_wudhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sebelum_wudhu" />

                    <TextView
                        android:id="@+id/text_sebelum_wudhu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Sebelum Wudhu"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sesudah_wudhu">

                    <ImageView
                        android:id="@+id/img_setelah_wudhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sesudah_wudhu" />

                    <TextView
                        android:id="@+id/text_setelah_wudhu"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Setelah Wudhu"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sebelum_tidur">

                    <ImageView
                        android:id="@+id/img_sebelum_tidur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sebelum_tidur" />

                    <TextView
                        android:id="@+id/text_sebelum_tidur"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Sebelum Tidur"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_sesudah_tidur">

                    <ImageView
                        android:id="@+id/img_setalah_tidur"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sesudah_tidur" />

                    <TextView
                        android:id="@+id/text_setelah_tidur"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Setelah Tidur"
                        android:textAlignment="center"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/btn_masuk_masjid">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_keluar_rumah">

                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Keluar Rumah"
                        android:textAlignment="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/btn_masuk_rumah">

                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Doa Setelah Tidur"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
